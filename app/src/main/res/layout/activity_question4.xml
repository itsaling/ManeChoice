<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity_question4">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/question4"
            android:textSize="24sp"
            android:text="How absorbant (porosity) is your hair?" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp"/>
    <ImageView
            android:layout_width="152dp"
            android:layout_height="137dp" app:srcCompat="@drawable/lowporosity"
            android:id="@+id/low" android:layout_marginTop="68dp"
            app:layout_constraintTop_toBottomOf="@+id/question4" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="37dp" android:layout_marginStart="37dp"/>
    <TextView
            android:text="Low"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView5"
            android:textSize="18sp" android:layout_marginTop="22dp"
            app:layout_constraintTop_toBottomOf="@+id/low" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="88dp" android:layout_marginStart="88dp"/>
    <TextView
            android:text="Normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView6"
            android:textSize="18sp"
            android:layout_marginTop="27dp"
            app:layout_constraintTop_toBottomOf="@+id/normal" app:layout_constraintStart_toEndOf="@+id/textView5"
            android:layout_marginLeft="161dp" android:layout_marginStart="161dp"/>
    <ImageView
            android:layout_width="152dp"
            android:layout_height="137dp" app:srcCompat="@drawable/highporosity"
            android:id="@+id/high" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="76dp"
            app:layout_constraintTop_toBottomOf="@+id/low"/>
    <TextView
            android:text="High"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView7" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="18sp" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/high"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/prev"
            android:text="prev" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="56dp"
            app:layout_constraintTop_toBottomOf="@+id/textView7"
            style="@style/Widget.AppCompat.Button.Colored"/>
    <ImageView
            android:layout_width="152dp"
            android:layout_height="132dp" app:srcCompat="@drawable/normalporosity"
            android:id="@+id/normal" android:layout_marginTop="69dp"
            app:layout_constraintTop_toBottomOf="@+id/question4" android:layout_marginLeft="44dp"
            android:layout_marginStart="44dp" app:layout_constraintStart_toEndOf="@+id/low"/>
</android.support.constraint.ConstraintLayout>