<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".question4"
        android:background="@android:color/white">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/question4"
            android:textSize="24sp"
            android:text="How absorbant (porosity) is your hair?" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp"/>
    <ImageView
            android:layout_width="169dp"
            android:layout_height="158dp"
            android:id="@+id/low" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/question4" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="36dp" android:layout_marginStart="36dp" app:srcCompat="@drawable/lowporosity"/>
    <TextView
            android:text="Low"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView5"
            android:textSize="18sp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/low" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="88dp" android:layout_marginStart="88dp"/>
    <TextView
            android:text="Normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView6"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/textView5"
            android:layout_marginLeft="161dp" android:layout_marginStart="161dp" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/normal" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="71dp" android:layout_marginRight="71dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <ImageView
            android:layout_width="169dp"
            android:layout_height="158dp" app:srcCompat="@drawable/highporosity"
            android:id="@+id/high" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/low"/>
    <TextView
            android:text="High"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView7" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="18sp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/high" app:layout_constraintHorizontal_bias="0.498"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/prev"
            android:text="prev" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            style="@style/Widget.AppCompat.Button.Colored"
            app:layout_constraintHorizontal_bias="0.498"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/textView7"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
            android:layout_width="169dp"
            android:layout_height="158dp" app:srcCompat="@drawable/normalporosity"
            android:id="@+id/normal" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/question4" android:layout_marginLeft="44dp"
            android:layout_marginStart="44dp" app:layout_constraintStart_toEndOf="@+id/low"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="26dp"
            android:layout_marginRight="26dp" app:layout_constraintHorizontal_bias="0.787"/>
</android.support.constraint.ConstraintLayout>