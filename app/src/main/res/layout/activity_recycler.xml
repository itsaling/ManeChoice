<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        tools:context=".recyclerActivity">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:orientation="horizontal"
                android:background="#FFA7063D"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="Products"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:textSize="24dp"
                    android:textColor="@android:color/white"
                    android:padding="16dp"
                    android:id="@+id/productTitle"/>
            <TextView
                    android:text="1"
                    android:layout_width="135dp"
                    android:layout_height="wrap_content" android:id="@+id/productCount" android:layout_weight="1"
                    android:textColor="#EBE3E3" android:textSize="18sp"/>
            <Button
                    android:text="Your Products"
                    android:textColor="#fff"
                    android:layout_width="173dp"
                    android:background="@color/colorPrimaryDark"
                    android:layout_height="84dp"
                    android:id="@+id/yourProduct"
                    android:layout_weight="1"/>
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="465dp"
                tools:listitem="@layout/productview_item"
        />
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <Button
                    android:text="Similar Product"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content" android:id="@+id/similarProductBtn" android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.Colored"/>
            <Button
                    android:text="View all"
                    android:layout_width="51dp"
                    android:layout_height="wrap_content" android:id="@+id/viewAllProductBtn" android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.Colored"/>
            <Button
                    android:text="reset"
                    android:layout_width="55dp"
                    android:layout_height="50dp" android:id="@+id/resetBtn" android:layout_weight="1"/>
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
