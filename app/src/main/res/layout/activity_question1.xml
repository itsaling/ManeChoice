<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".question1">

    <TextView
            android:text="What do you think is your hair type?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/question1" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:textSize="24sp"/>
    <ImageView
            android:layout_width="169dp"
            android:layout_height="158dp" app:srcCompat="@mipmap/ic_launcher_round"
            android:id="@+id/type1" android:layout_marginTop="36dp"
            android:clickable="true"
            app:layout_constraintTop_toBottomOf="@+id/question1" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="32dp" android:layout_marginStart="32dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/type2"
            android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="Type 1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView2"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/type1" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/textView5" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.401"/>
    <ImageView
            android:layout_width="169dp"
            android:layout_height="158dp" app:srcCompat="@mipmap/ic_launcher_round"
            android:id="@+id/type3"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="32dp" android:layout_marginStart="32dp"
            android:layout_marginEnd="7dp" app:layout_constraintEnd_toStartOf="@+id/type4"
            android:layout_marginRight="7dp" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView2"/>
    <TextView
            android:text="Type 3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView3"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="96dp" android:layout_marginStart="96dp" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/type3" app:layout_constraintEnd_toStartOf="@+id/textView4"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.046"/>
    <ImageView
            android:layout_width="169dp"
            android:layout_height="158dp" app:srcCompat="@mipmap/ic_launcher_round"
            android:id="@+id/type4"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp" android:layout_marginRight="20dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView5"/>
    <TextView
            android:text="Type 4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView4"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/type4" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="80dp" android:layout_marginRight="80dp"/>
    <ImageView
            android:layout_width="169dp"
            android:layout_height="158dp" app:srcCompat="@mipmap/ic_launcher_round"
            android:id="@+id/type2" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/question1" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="208dp" android:layout_marginStart="208dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
    <TextView
            android:text="Type 2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView5"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="92dp" android:layout_marginRight="92dp"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/type2"
    />
    <Button
            android:text="prev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/prev"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
</android.support.constraint.ConstraintLayout>