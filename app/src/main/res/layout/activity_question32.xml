<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".question32">

    <TextView
            android:text="What is your hair texture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/question32" android:textSize="18sp"/>
    <ImageView
            android:layout_width="169dp"
            android:layout_height="158dp" app:srcCompat="@drawable/type3"
            android:id="@+id/curly" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp" app:layout_constraintStart_toEndOf="@+id/wavy2"
            android:layout_marginLeft="23dp" android:layout_marginStart="23dp" android:layout_marginTop="152dp"
            app:layout_constraintTop_toBottomOf="@+id/question32" app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="Wavy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView10"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="81dp"
            android:layout_marginStart="81dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/wavy2" app:layout_constraintEnd_toStartOf="@+id/textView11"
            android:layout_marginEnd="167dp" android:layout_marginRight="167dp"
    />
    <ImageView
            android:layout_width="169dp"
            android:layout_height="158dp" app:srcCompat="@drawable/type3"
            android:id="@+id/wavy2"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="28dp"
            android:layout_marginStart="28dp" android:layout_marginTop="152dp"
            app:layout_constraintTop_toBottomOf="@+id/question32"/>
    <TextView
            android:text="Curly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView11"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/curly" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="97dp" android:layout_marginRight="97dp"/>
    <Button
            android:text="PREV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/prev" android:layout_marginTop="104dp"
            app:layout_constraintTop_toBottomOf="@+id/textView10"
            app:layout_constraintHorizontal_bias="0.498"
            android:layout_marginBottom="186dp" app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>