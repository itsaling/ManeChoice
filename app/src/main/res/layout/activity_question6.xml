<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity_question6">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/question6" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:textSize="24sp"
            android:text="How full is your hair?"/>
    <ImageView
            android:src="@mipmap/ic_launcher"
            android:layout_width="135dp"
            android:layout_height="126dp"
            android:id="@+id/thin" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp" android:layout_marginTop="46dp"
            app:layout_constraintTop_toBottomOf="@+id/question6"/>
    <TextView
            android:text="Thin/Normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/thin" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="57dp" android:layout_marginStart="57dp"/>
    <ImageView
            android:src="@mipmap/ic_launcher"
            android:layout_width="137dp"
            android:layout_height="128dp"
            android:id="@+id/full" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.499"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="125dp"
            android:layout_marginStart="125dp"/>
    <TextView
            android:text="Full/Thick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/full" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="162dp" android:layout_marginStart="162dp"/>
    <ImageView
            android:src="@mipmap/ic_launcher"
            android:layout_width="137dp"
            android:layout_height="128dp"
            android:id="@+id/normal" android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/question6" android:layout_marginLeft="91dp"
            android:layout_marginStart="91dp" app:layout_constraintStart_toEndOf="@+id/thin"/>
    <TextView
            android:text="Normal/Full"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" android:layout_marginTop="23dp"
            app:layout_constraintTop_toBottomOf="@+id/normal" android:layout_marginLeft="149dp"
            android:layout_marginStart="149dp" app:layout_constraintStart_toEndOf="@+id/textView"/>
    <Button
            android:text="prev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/prev" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="120dp" app:layout_constraintTop_toBottomOf="@+id/textView3"/>

</android.support.constraint.ConstraintLayout>