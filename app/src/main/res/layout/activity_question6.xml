<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".question2">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/question2" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:textSize="24sp"
            android:text="How full is your hair?"/>
    <Button
            android:text="normal/full"
            android:layout_width="150dp"
            android:layout_height="112dp"
            android:id="@+id/normal" android:layout_marginTop="85dp"
            app:layout_constraintTop_toBottomOf="@+id/question2" android:layout_marginLeft="51dp"
            android:layout_marginStart="51dp" app:layout_constraintStart_toEndOf="@+id/thin"/>
    <Button
            android:text="full/thick"
            android:layout_width="142dp"
            android:layout_height="113dp"
            android:id="@+id/thick" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="61dp"
            app:layout_constraintTop_toBottomOf="@+id/thin"/>
    <Button
            android:text="Thin/normal "
            android:layout_width="141dp"
            android:layout_height="117dp"
            android:id="@+id/thin" android:layout_marginTop="85dp"
            app:layout_constraintTop_toBottomOf="@+id/question2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="32dp" android:layout_marginStart="32dp"/>
    <Button
            android:text="prev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/prev" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="161dp"
            app:layout_constraintTop_toBottomOf="@+id/thick"/>

</android.support.constraint.ConstraintLayout>