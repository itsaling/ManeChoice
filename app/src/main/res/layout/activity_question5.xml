<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity_question5">
    <TextView
            android:text="Length Check- How long is your hair?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/question5" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:textSize="24sp"/>
    <ImageView
            android:layout_width="170dp"
            android:layout_height="160dp" app:srcCompat="@drawable/shortImage"
            android:id="@+id/short" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/question5" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="32dp" android:layout_marginStart="32dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/medium"
            android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="1 - 6 in (Short)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/ans1"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/short" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/ans2" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.401"/>
    <ImageView
            android:layout_width="169dp"
            android:layout_height="158dp" app:srcCompat="@drawable/longImage"
            android:id="@+id/long"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="120dp" android:layout_marginStart="120dp"
            app:layout_constraintTop_toBottomOf="@+id/ans1"/>
    <TextView
            android:text="12- more in (Long)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/ans3"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="144dp" android:layout_marginStart="144dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/long"
    />
    <ImageView
            android:layout_width="169dp"
            android:layout_height="158dp" app:srcCompat="@drawable/mediumImage"
            android:id="@+id/medium" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/question5" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="208dp" android:layout_marginStart="208dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/ans2"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="52dp" android:layout_marginRight="52dp"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/medium"
            android:text="7 - 12 in (Medium)"/>
    <Button
            android:text="prev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/prev"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="152dp"
            android:layout_marginStart="152dp"
            android:layout_marginBottom="104dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="171dp"
            android:layout_marginRight="171dp" android:layout_marginTop="94dp"
            app:layout_constraintTop_toBottomOf="@+id/ans3" style="@style/Widget.AppCompat.Button.Colored"/>

</android.support.constraint.ConstraintLayout>